@model AnkurUdyogERP.Models.Home

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Ankur Udyog ERP - Distributer Login</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <link rel="icon" href="../assets/images/favicon/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="../assets/images/favicon/favicon.png" type="image/x-icon">
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/font-awesome.css">
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/themify.css">
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="../assets/css/style.css">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="../assets/css/responsive.css">
</head>
<body>
    @using (Html.BeginForm("LoginDistributerAction", "Home", FormMethod.Post, new { @id = "signupForm" }))
    {
    <!-- Loader starts-->
        <div class="loader-wrapper">
            <div class="loader"></div>
        </div>
    <!-- Loader ends-->
    <!-- login page start-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-7"><img class="bg-img-cover bg-center" src="../assets/images/login/2.jpg" alt="bg2"></div>
                <div class="col-xl-5 p-0">
                    <div class="login-card">
                        <div>
                            <div><a class="logo" href="/Home/Login"><img class="img-fluid for-light" src="../assets/images/logo/logo.png" alt="logo Image"></a></div>
                            <div class="login-main">
                                <form class="theme-form">
                                    <h2 class="text-center">Sign in to account</h2>
                                    <p class="text-center">Enter your email & password to login</p>
                                    <div>
                                        <span style="color:red">@TempData["Login"]</span>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label">UserId/Email Address</label>
                                        @*<input class="form-control" type="email" required="" placeholder="Test@gmail.com">*@
                                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Test@gmail.com", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label">Password</label>
                                        <div class="form-input position-relative">
                                            @*<input class="form-control" type="password" name="login[password]" required="" placeholder="*********">*@
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Placeholder = "*********", @required = "required" })
                                            <div class="show-hide"><span class="show"></span></div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0">
                                        <div class="checkbox p-0">
                                            <input id="checkbox1" type="checkbox">
                                            <label class="text-muted" for="checkbox1">Remember password</label>
                                        </div><a class="link" href="#">Forgot password?</a>
                                        <div class="text-end mt-3">
                                            @*<a href="/Distributer/DistributerDashboard" class="btn btn-primary btn-block w-100">Sign in</a>*@
                                            <input type="submit" id="Login" class="btn btn-primary btn-block w-100" name="Login" value="Sign In">
                                        </div>
                                    </div>
                                    <p class="mt-4 mb-0 text-center">Don't have account?<a class="ms-2" href="#">Create Account</a></p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="../assets/js/jquery-3.6.0.min.js"></script>
    <!-- Theme js-->
        <script src="../assets/js/script.js"></script>
    }
</body>
</html>


