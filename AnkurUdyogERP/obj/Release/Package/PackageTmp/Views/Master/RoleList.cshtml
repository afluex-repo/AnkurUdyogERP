@model AnkurUdyogERP.Models.Master

@{
    ViewBag.Title = "RoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Role List</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/AdminDashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">HRM</li>
                        <li class="breadcrumb-item active">Role List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <!-- HTML (DOM) sourced data  Starts-->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0 d-flex justify-content-between">
                        @*<h3 class="mb-3"></h3>*@
                        <span style="color:red;">@TempData["RoleMaster"]</span>
                        <a href="/Master/RoleMaster" class="btn btn-primary"><i class="fa fa-plus"></i> Add New</a>
                    </div>
                    <div class="date-picker">
                        <div class="card-body">
                            @using (Html.BeginForm("RoleList", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
                            {
                            
                            }
                            <div class="table-responsive">
                                <table class="display" id="data-source-1" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>Role Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstRole != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstRole)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@Item.RoleName</td>
                                                        <td>
                                                            <ul class="action">
                                                                <li class="edit"> <a href="/Master/RoleMaster?Id=@Item.PK_RoleId"><i class="icon-pencil-alt"></i></a></li>
                                                                <li class="delete"><a href="/Master/DeleteRoleMaster?Id=@Item.PK_RoleId" onclick="return confirm('Are you sure you want to delete this role name ?')"><i class="icon-trash"></i></a></li>
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- HTML (DOM) sourced data  Ends-->
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>
</div>
