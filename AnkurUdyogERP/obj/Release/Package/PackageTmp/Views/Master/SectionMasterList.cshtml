@model AnkurUdyogERP.Models.Master

@{
    ViewBag.Title = "SectionMasterList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>TMT Bar Type List</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/AdminDashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Master</li>
                        <li class="breadcrumb-item active">TMT Bar Type List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <!-- HTML (DOM) sourced data  Starts-->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0 d-flex justify-content-between">
                        @*<h3 class="mb-3"></h3>*@
                        <span style="color:red;">@TempData["SectionMasterList"]</span>
                        <a href="/Master/SectionMaster" class="btn btn-primary"><i class="fa fa-plus"></i> Add New</a>
                    </div>
                    <div class="date-picker">
                        <div class="card-body">
                            @using (Html.BeginForm("SectionMasterList", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
                            {

                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label>Section <span style="color:red;"></span></label>
                                        @Html.TextBoxFor(m => m.SectionMaster, new { @class = "form-control", @placeholder = "Section", @onkeypress = "return isNumberKey(event);" })
                                    </div>
                                    <div class="col-md-3">
                                        <label>Rate <span style="color:red;"></span></label>
                                        @Html.TextBoxFor(m => m.Rate, new { @class = "form-control", @placeholder = "Rate", @onkeypress = "return isNumberKey(event);" })
                                    </div>
                                    <div class="col-md-3">
                                        <input type="submit" class="btn btn-primary mt-4" value="Search" id="btnSearch" name="btnSearch" />
                                    </div>
                                </div>
                                
                            }
                            <div class="table-responsive mt-3">
                                <table class="display" id="data-source-1" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>Section</th>
                                            <th>Rate</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstsection != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstsection)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@Item.SectionMaster MM</td>
                                                        <td>@Item.Rate</td>
                                                        <td>
                                                            <ul class="action">
                                                                <li class="edit"> <a href="/Master/SectionMaster?Id=@Item.PK_SectionId"><i class="icon-pencil-alt"></i></a></li>
                                                                <li class="delete"><a href="/Master/DeleteSectionMaster?Id=@Item.PK_SectionId" onclick="return confirm('Are you sure you want to delete this role name ?')"><i class="icon-trash"></i></a></li>
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- HTML (DOM) sourced data  Ends-->
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>
</div>
<script>
    function isNumberKey(evt) {

        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
</script>