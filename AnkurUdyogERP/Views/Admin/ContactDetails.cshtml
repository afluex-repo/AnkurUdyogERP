@model AnkurUdyogERP.Models.Admin
@{
    ViewBag.Title = "ContactDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Contact List</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/AdminDashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">Contact List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header mt-2 pb-0 d-flex justify-content-between">
                        <h3>Contact List</h3>
                     </div>
                    <div class="date-picker">
                        <div class="card-body">
                            <div class="dt-ext table-responsive">
                                <table class="display" id="export-button" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>Full Name</th>
                                            <th>Email</th>
                                            <th>Phone No.</th>
                                            <th>Message</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstContactDetails != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstContactDetails)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.PhoneNo</td>
                                                        <td>@item.Message</td>
                                                    </tr>
                                                  i++;
                                                    }
                                                }
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>
</div>

