<script>
    function GetDetails(i) {
        var FK_DistributerId_ = $("#FK_DistributerId_" + i).text();
        var Distributor_ = $("#Distributor_" + i).text();
        var BookingDate_ = $("#BookingDate_" + i).text();
        $("#DistributerName").val(Distributor_);
        $("#DistributerID").val(FK_DistributerId_);
        $("#BookingDate").val(BookingDate_);
        var ViewData = {};
        ViewData.FK_DistributerId = FK_DistributerId_;
        ViewData.OrderDate = BookingDate_;
        $.ajax({
            url: '/Admin/BindDelearlist', type: 'post', dataType: 'json',
            data: ViewData,
            success: function (data) {
                debugger;
                $("#tableOrderDetail tbody").find("tr:gt(0)").remove();
                $("#tableOrderDetail tbody").find("td:eq(0)").remove();
                $.each(data, function (i, v) {
                    var Htmldata = "<tr><td>" + v.Dealer + "</td><td style='display:none'>" + v.PK_DealerId + "</td><td>" + v.TotalAmount + "</td><td id='textQuantity" + i + "'>" + v.OrderQuantity + "</td><td>" + v.Dispatched + "</td><td><input type='text' id='txtAmount" + i + "'  value='" + v.DispatchPending + "'name='txtAmount' onkeypress='allowNumbersOnly(event)' class='form-control' onchange='return GetBookingQuantityValues(" + i + ")'/></td><td style='display:none' id='PendingDispatch" + i + "'>" + v.DispatchPending + "</td></tr>"
                    $("#tableOrderDetail").append(Htmldata);

                });
            }
        });
    }

