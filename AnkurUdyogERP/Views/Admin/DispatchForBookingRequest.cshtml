    function SaveAllRecord() {
        debugger;
        var DistributerID = $("#DistributerID").val();
        var BookingDate = $("#BookingDate").val();
        var listoftblRecord = new Array();
        var i = 0;
        $("#tableOrderDetail").find("tr:gt(0)").each(function () {
            var PK_DealerId = $(this).find("td:eq(1)").text();
            var TotalAmount = $(this).find("td:eq(2)").text();
            var OrderQuantity = $(this).find("td:eq(3)").text();

            var a = 'txtAmount';
            a = a.concat(i);

            var DispatchValue = $(this).find("#" + a + "").html(i).val();
            // alert(Dealer);
            var AllRecord = {};
            AllRecord.DistributerID = DistributerID;
            AllRecord.BookingDate = BookingDate;
            AllRecord.PK_DealerId = PK_DealerId;
            AllRecord.TotalAmount = TotalAmount;
            AllRecord.OrderQuantity = OrderQuantity;
            AllRecord.DispatchValue = DispatchValue;
            (listoftblRecord).push(AllRecord);
            i = i + 1;
        });

        var data = {
            OrderRequest: JSON.stringify(listoftblRecord)
        }
        //listoftblRecord = JSON.stringify(listoftblRecord);
        $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: '/Admin/DispatchForBookingRequestAction',
            data: JSON.stringify({ dataValue: JSON.stringify(data) }),
            contentType: 'application/json',
            success: function (data) {
                if (data.status == "Yes") {
                    alert('Order has been dispatch successfully !!');
                    window.location.href = '@Url.Action("DispatchForBookingRequest", "Admin")';

                }
                else {
                    console.log(data.status)
                    alert(data.status);
                }
            }
        });


    }

    function GetBookingQuantityValues(i) {
        debugger;
        var DispatchVlaue = $("#txtAmount" + i).val();

        var Dispatched = $("#PendingDispatch" + i).text();


        if (Number(DispatchVlaue) > Number(Dispatched)) {

            alert("Dispatch value should be less than pending booking quantity !")
            $("#txtAmount" + i).val(Dispatched);
        }
        if (DispatchVlaue < 0) {
            // alert("Please Enter Valid Quantity!!");
            $("#txtAmount" + i).val("");
        }

    }
    // Validation
    function allowNumbersOnly(e) {
        var code = (e.which) ? e.which : e.keyCode;
        if (code > 31 && (code < 48 || code > 57)) {
            e.preventDefault();
        }
    }
</script>
