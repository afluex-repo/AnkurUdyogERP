<script>
    function GetDetails(i) {
        var FK_DistributerId_ = $("#FK_DistributerId_" + i).text();
        var Distributor_ = $("#Distributor_" + i).text();
        var BookingDate_ = $("#BookingDate_" + i).text();
        $("#DistributerName").val(Distributor_);
        $("#DistributerID").val(FK_DistributerId_);
        $("#BookingDate").val(BookingDate_);
        var ViewData = {};
        ViewData.FK_DistributerId = FK_DistributerId_;
        ViewData.OrderDate = BookingDate_;
        $.ajax({
            url: '/Admin/BindDelearlist', type: 'post', dataType: 'json',
            data: ViewData,
            success: function (data) {
                debugger;
                $("#tableOrderDetail tbody").find("tr:gt(0)").remove();
                $("#tableOrderDetail tbody").find("td:eq(0)").remove();
                $.each(data, function (i, v) {
                    var Htmldata = "<tr><td>" + v.Dealer + "</td><td style='display:none'>" + v.PK_DealerId + "</td><td>" + v.TotalAmount + "</td><td id='textQuantity" + i + "'>" + v.OrderQuantity + "</td><td>" + v.Dispatched + "</td><td><input type='text' id='txtAmount" + i + "'  value='" + v.DispatchPending + "'name='txtAmount' onkeypress='allowNumbersOnly(event)' class='form-control' onchange='return GetBookingQuantityValues(" + i + ")'/></td><td style='display:none' id='PendingDispatch" + i + "'>" + v.DispatchPending + "</td></tr>"
                    $("#tableOrderDetail").append(Htmldata);

                });
            }
        });
    }

    function SaveAllRecord(i) {
        debugger;
        var DealerId = $("#PK_DealerId_" + i).text();
        //var Distributor_ = $("#Distributor_" + i).text();
        var DistributerID = $("#FK_DistributerId_" + i).text();
        var BookingDate = $("#BookingDate_" + i).text();
        var PK_DealerId = $("#PK_DealerId_" + i).text();
        var TotalAmount = $("#TotalAmount_" + i).text();
        var OrderQuantity = $("#OrderQuantity_" + i).text();
        var DispatchValue = $("#txtAmount_" + i).val();
        var listoftblRecord = new Array();


        var AllRecord = {};
        AllRecord.DistributerID = DistributerID;
        AllRecord.BookingDate = BookingDate;
        AllRecord.PK_DealerId = PK_DealerId;
        AllRecord.TotalAmount = TotalAmount;
        AllRecord.OrderQuantity = OrderQuantity;
        AllRecord.DispatchValue = DispatchValue;
        (listoftblRecord).push(AllRecord);
       
        var data = {
            OrderRequest: JSON.stringify(listoftblRecord)
        }
        $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: '/Admin/DispatchForBookingRequestAction',
            data: JSON.stringify({ dataValue: JSON.stringify(data) }),
            contentType: 'application/json',
            success: function (data) {
                if (data.status == "Yes") {
                    alert('Order has been dispatch successfully !!');
                    window.location.href = '@Url.Action("DispatchForBookingRequest", "Admin")';

                }
                else {
                    console.log(data.status)
                    alert(data.status);
                }
            }
        });
    }

    function GetBookingQuantityValues(i) {
        debugger;
        var DealerId = $("#PK_DealerId_" + i).text();
        var DispatchedPending = $("#DispatchPending_" + i).text();
        var Dispatched = $("#Dispatched_" + i).text();
        var DispatchVlaue = $("#txtAmount_" + i).val();
       
        if (Number(DispatchVlaue) > Number(DispatchedPending)) {
            alert("Dispatch value should be less than pending booking quantity !")
            $("#txtAmount_" + i).val(DispatchedPending);
        }
        if (DispatchVlaue < 0) {
            $("#txtAmount_" + i).val(DispatchedPending);
        }

    }
    // Validation
    function allowNumbersOnly(e) {
        var code = (e.which) ? e.which : e.keyCode;
        if (code > 31 && (code < 48 || code > 57)) {
            e.preventDefault();
        }
    }
</script>
