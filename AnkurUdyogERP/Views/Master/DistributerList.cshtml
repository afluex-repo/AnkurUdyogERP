@model AnkurUdyogERP.Models.Master

@{
    ViewBag.Title = "DistributerListForAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Distributer List</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/AdminDashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Distributer</li>
                        <li class="breadcrumb-item active">Distributer List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">

        <div class="row">
            <!-- HTML (DOM) sourced data  Starts-->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0 d-flex justify-content-between">
                        <span style="color:red;">@TempData["Distributer"]</span>
                        <a href="/Master/DistributerRegistration" class="btn btn-primary my-0"><i class="fa fa-plus"></i> Add New</a>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("DistributerList", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
                        {
                            <div class="row">
                                <div class="col-md-2">
                                    <label>LoginId <span style="color:red;"></span></label>
                                    @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "LoginId" })
                                </div>
                                <div class="col-md-2">
                                    <label>Firm Name <span style="color:red;"></span></label>
                                    @Html.TextBoxFor(m => m.FirmName, new { @class = "form-control", @placeholder = "Firm Name" })
                                </div>
                                <div class="col-md-2">
                                    <label>From Date <span style="color:red;"></span></label>
                                    <input id="FromDate" name="FromDate" class="datepicker-here form-control" type="text" data-language="en" data-date-format="dd/mm/yy" readonly=true placeholder="dd/mm/yyyy">
                                </div>
                                <div class="col-md-2">
                                    <label>To Date <span style="color:red;"></span></label>
                                    <input id="ToDate" name="ToDate" class="datepicker-here form-control" type="text" data-language="en" data-date-format="dd/mm/yy" readonly=true placeholder="dd/mm/yyyy">
                                </div>

                                <div class="col-md-2">
                                    <input type="submit" class="btn btn-primary mt-4" value="Search" id="btnSearch" name="btnSearch" />

                                </div>
                            </div>
                        }
                        <div class="dt-ext table-responsive mt-4">
                            <table class="display" id="export-button" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>S.No.</th>
                                        <th>LoginId</th>
                                        <th>Password</th>
                                        <th>Name</th>
                                        <th>Mobile No</th>
                                        <th>Email</th>
                                        <th>Address</th>
                                        <th>PinCode</th>
                                        <th>State</th>
                                        <th>City</th>
                                        <th>Firm Name</th>
                                        <th>PanNo</th>
                                        <th>GSTNO</th>
                                        <th>Limit</th>
                                        <th>Joining Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstDistributer != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstDistributer)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td class="example-popover" data-container="body"
                                                        data-bs-toggle="popover" data-bs-placement="right" title="Password"
                                                        data-bs-content="@Item.Password" data-bs-offset="0,-50" style="cursor:pointer">
                                                        ******
                                                    </td>
                                                    @*<td>@Item.Password</td>*@
                                                    <td style="min-width:130px">@Item.Name</td>
                                                    <td>@Item.MobileNo</td>
                                                    <td>@Item.Email</td>
                                                    <td style="min-width:200px">@Item.Address</td>
                                                    <td>@Item.Pincode</td>
                                                    <td style="min-width:130px">@Item.State</td>
                                                    <td>@Item.City</td>
                                                    <td style="min-width:200px">@Item.FirmName</td>
                                                    <td>@Item.PanNo</td>
                                                    <td>@Item.GSTNO</td>
                                                    <td>@Item.Limit</td>
                                                    <td>@Item.JoiningDate</td>
                                                    <td>
                                                        <ul class="action">
                                                            <li class="edit"> <a href="/Master/DistributerRegistration?Id=@Item.DistributerId"><i class="icon-pencil-alt"></i></a></li>
                                                            <li class="delete"><a href="/Admin/DeleteDistributer?Id=@Item.DistributerId" onclick="return confirm('Are you sure you want to delete this distributer ?')"><i class="icon-trash"></i></a></li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- HTML (DOM) sourced data  Ends-->
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>








